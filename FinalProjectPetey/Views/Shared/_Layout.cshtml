<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Petey</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    @Styles.Render("~/Content/bootstrap-Minty.css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>

<body style="background-color:white;">
    <div class="container">
        <nav class="navbar-center navbar-expand-lg navbar-dark bg-warning fixed-top">
            <ul class="navbar-nav justify-content-center d-flex flex-fill">
                &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
                &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
                &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
                &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
                <a class="navbar-logo" href="~/Home"><img src=@Url.Content("~/Content/images/logo23.png") width="45" height="45" align="middle" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="~/Home/Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Home/About">About</a>
                        </li>
                        <input maxlength="200" size="43" class="form-control mr-sm-0" type="search" placeholder="Search">

                        <div class="col-3">
                            <select id="inputState" class="form-control">
                                <option selected>...</option>
                                <option>สัตว์เลี้ยง</option>
                                <option>อุปกรณ์-สัตว์เลี้ยง</option>
                                <option>เทรนเนอร์</option>
                            </select>
                        </div>
                        <form my-5 my-lg-0">
                            <button class="btn btn-light my-5 my-sm-0" type="submit">
                                <img src=@Url.Content("~/Content/images/icons8-search-64.png") width="20" height="20" align="absmiddle" />
                            </button>
                        </form>
                    </ul>


                    <ul class="navbar-nav mr-auto">
                        @if (Session["Shop_name"] != null)
                        {
                            if (Session["Shop_name"] == "3")
                            {
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop4" type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false" style="width:180px;height:38px">
                                        @Session["UserName"]
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop4">
                                        <a class="dropdown-item" href="~/Sell/Shop">หน้าร้านของฉัน</a>
                                        <a class="dropdown-item" href="#">รายการสั่งซื้อ/ประวัติการสั่งซื้อ</a>
                                        <a class="dropdown-item" href="#">รายสินค้าที่จำหน่าย</a>
                                        <a class="dropdown-item" href="~/Account/EditUser">แก้ไขข้อมูลส่วนตัว</a>
                                    </div>
                                    &nbsp;
                                </div>

                                    <form class="form-inline my-5 my-lg-0">

                                        <button class="btn btn-light my-5 my-sm-0" type="submit">
                                            <img src=@Url.Content("~/Content/images/icons8-shopping-cart-100.png") width="20" height="20" align="absmiddle" />
                                        </button>
                                    </form>

                                    <form class="form-inline my-5 my-lg-0">
                                        <button id="btnGroupDrop4" type="button" class="btn btn-light my-5 my-sm-0" data-toggle="dropdown"
                                                aria-haspopup="true" aria-expanded="false">
                                            <img src=@Url.Content("~/Content/images/icons8-alarm-64.png") width="20" height="20" align="absmiddle" />
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop4">
                                            <a class="dropdown-item" href="#"></a>
                                            <a class="dropdown-item" href="#"></a>
                                            <a class="dropdown-item" href="#"></a>
                                        </div>
                                    </form>

                                    @Html.ActionLink("ออกจากระบบ", "Logout", "Account", null, new { @class = "btn btn-dark " })
                            }
                            else if (Session["Shop_name"] == "1")
                            {
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop4" type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false" style="width:180px;height:38px">
                                        @Session["UserName"]
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop4">

                                        <a class="dropdown-item" href="#">รายการสั่งซื้อ/ประวัติการสั่งซื้อ</a>
                                        @Html.ActionLink("แก้ไข", "EditUser", "Account", new { id = Session["UserId"] }, new { @class = "dropdown-item" })
                                        @*<a class="dropdown-item" href="~/Account/EditUser">แก้ไขข้อมูลส่วนตัว</a>*@
                                    </div>

                                    &nbsp;
                                </div>

                                    <form class="form-inline my-5 my-lg-0">

                                        <button class="btn btn-light my-5 my-sm-0" type="submit">
                                            <img src=@Url.Content("~/Content/images/icons8-shopping-cart-100.png") width="20" height="20" align="absmiddle" />
                                        </button>
                                    </form>

                                    <form class="form-inline my-5 my-lg-0">
                                        <button id="btnGroupDrop4" type="button" class="btn btn-light my-5 my-sm-0" data-toggle="dropdown"
                                                aria-haspopup="true" aria-expanded="false">
                                            <img src=@Url.Content("~/Content/images/icons8-alarm-64.png") width="20" height="20" align="absmiddle" />
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop4">
                                            <a class="dropdown-item" href="#"></a>
                                            <a class="dropdown-item" href="#"></a>
                                            <a class="dropdown-item" href="#"></a>
                                        </div>
                                    </form>

                                    @Html.ActionLink("ออกจากระบบ", "Logout", "Account", null, new { @class = "btn btn-dark " })

                            }
                            else if (Session["Shop_name"] == "2")
                            {
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop4" type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false" style="width:180px;height:38px">
                                        @Session["UserName"]
                                    </button>
                                </div>
                                    @Html.ActionLink("ออกจากระบบ", "Logout", "Account", null, new { @class = "btn btn-dark " })
                            }
                            else
                            {
                                @Html.ActionLink("เข้าสู่ระบบ", "Login", "Account", null, new { @class = "btn btn-dark " })
                                @Html.ActionLink("สมัครสมาชิก", "accept", "Account", null, new { @class = "btn btn-dark " })
                            }
                        }
                        else
                        {
                            @Html.ActionLink("เข้าสู่ระบบ", "Login", "Account", null, new { @class = "btn btn-dark " })
                            @Html.ActionLink("สมัครสมาชิก", "accept", "Account", null, new { @class = "btn btn-dark " })
                        }
                    </ul>
</div>

        </nav>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - เว็ป</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

